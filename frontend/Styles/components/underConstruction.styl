.hero-banner--under-construction
  background linear-gradient(135deg, #1d4c82 0%, #0d2442 100%)
  display flex
  align-items center
  justify-content center
  padding 0
  margin 0
  height 100vh

  .hero-overlay
    background rgba(15, 23, 42, 0.68)

  .container
    width 100%
    max-width 980px
    padding 0 24px
    display flex
    flex-direction column
    align-items center
    gap 32px

  .hero-panel
    width 100%
    background #fff
    background-image url('../images/underConstruction.svg')
    background-repeat no-repeat
    background-position 96% 67%
    background-size 50% 60%
    border-radius 16px
    box-shadow 0 32px 80px rgba(15, 23, 42, 0.28)
    padding 32px 40px
    display grid
    grid-template-columns 3fr 2fr
    gap 40px
    position relative
    overflow hidden

    &::before
      content ''
      position absolute
      inset 0
      background linear-gradient(135deg, rgba(20, 52, 99, 0.08) 0%, rgba(20, 52, 99, 0) 70%)
      z-index 1
      pointer-events none

  .hero-brand
    display flex
    justify-content flex-start
    align-items center
    width 100%

    .hero-logo
      width 180px
      height auto
      object-fit contain

  .hero-panel__left
    display flex
    flex-direction column
    gap 28px
    justify-content center
    align-items center

  .hero-panel__right
    display flex
    flex-direction column
    justify-content center
    align-items center
    min-height 360px
    position relative

  .hero-content
    display flex
    flex-direction column
    align-items flex-start
    gap 28px
    text-align left
    position relative
    z-index 1
    padding 10% 0

  .hero-text
    max-width 640px
    display flex
    flex-direction column
    gap 0

    .hero-title
      display flex
      flex-direction column
      gap 8px
      margin-bottom 16px
      font-family 'Inter', 'Noto Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif
      color primary-color
      font-weight 800
      line-height 1

      .hero-title__line
        display block

      .hero-title__line--under
        font-size 2rem
        letter-spacing -1px

      .hero-title__line--construction
        font-size 4rem
        letter-spacing -1px

    .hero-subtitle
      color #666
      font-size 0.9rem
      line-height 1.5

  .hero-actions
    margin-top 24px
    display flex
    flex-wrap wrap
    justify-content flex-start
    gap 18px
    z-index 1

  .btn--outline
    color primary-color
    border 2px solid rgba(20, 52, 99, 0.16)
    background transparent

    &:hover
      background rgba(20, 52, 99, 0.08)
      color primary-color

  .hero-panel__copyright
    width 100%
    text-align center
    font-size 0.85rem
    letter-spacing 0.08em
    color rgba(255, 255, 255, 0.75)
    margin-top 8px

@media (max-width: 1024px)
  .hero-banner--under-construction
    height auto
    padding 80px 0

    .hero-panel
      padding 40px 36px
      grid-template-columns 1fr
      gap 32px

@media (max-width: 768px)
  .hero-banner--under-construction
    padding 48px 0
    min-height 100vh

    .container
      padding 0 16px

    .hero-panel
      padding 28px 20px
      border-radius 24px
      gap 28px
      background-position 90% 72%
      background-size 70% auto

    .hero-panel__left
      justify-content flex-start
      align-items stretch
      width 100%

    .hero-brand
      justify-content center

    .hero-text
      padding 0

      .hero-title
        font-size 2.2rem

      .hero-subtitle--desktop
        display block
        font-size 1rem
        margin-bottom 70%

      .hero-title
        gap 6px

        .hero-title__line--under
          font-size 1.6rem
          letter-spacing -0.6px

        .hero-title__line--construction
          font-size 2.9rem
          letter-spacing -0.6px

    .hero-content
      width 100%
      min-height 100%
      padding 0

    .hero-panel__right
      display none

    .hero-actions
      width 100%
      margin-top auto
      justify-content center
      flex-direction column
      align-items stretch
      gap 14px

@media (max-width: 480px)
  .hero-banner--under-construction
    padding 36px 0

    .hero-panel
      padding 8% 18px
      border-radius 20px
      background-position 54% 75%
      background-size 75% auto
      height 90vh

    .hero-text
      padding 0
      .hero-title
        .hero-title__line--under
          font-size 1.4rem
          letter-spacing -0.4px

        .hero-title__line--construction
          font-size 2.4rem
          letter-spacing -0.4px

  .hero-panel__right
    display none

.under-construction-info
  padding 80px 0
  background linear-gradient(180deg, rgba(241, 245, 249, 0.65) 0%, rgba(248, 250, 252, 0.95) 100%)

  .container
    display grid
    grid-template-columns repeat(2, minmax(0, 1fr))
    gap 40px

  .status-card
    background base-white
    border-radius 20px
    padding 40px
    border 1px solid rgba(20, 52, 99, 0.08)
    box-shadow 0 24px 48px rgba(15, 23, 42, 0.08)
    display flex
    flex-direction column
    gap 24px

  .status-heading
    display flex
    align-items center
    gap 16px

  .status-icon
    width 56px
    height 56px
    border-radius 14px
    background rgba(20, 52, 99, 0.14)
    display flex
    align-items center
    justify-content center

    img
      width 28px
      height 28px

  .status-title
    margin 0
    font-size 1.4rem
    font-weight 600
    color primary-color

  .status-list
    list-style none
    margin 0
    padding 0
    display flex
    flex-direction column
    gap 16px

    li
      display flex
      align-items flex-start
      gap 14px
      color var(--text-secondary)
      font-size 1rem
      line-height 1.7

      &::before
        content ''
        display block
        width 8px
        height 8px
        margin-top 10px
        border-radius 50%
        background rgba(20, 52, 99, 0.65)

      strong
        color var(--text-primary)
        font-weight 600

  .status-highlight
    background linear-gradient(135deg, rgba(20, 52, 99, 0.95) 0%, rgba(20, 52, 99, 0.92) 100%)
    border-radius 20px
    padding 44px
    box-shadow 0 28px 60px rgba(20, 52, 99, 0.28)
    display flex
    flex-direction column
    gap 24px

  .status-highlight__title
    font-size 1.65rem
    font-weight 600
    color base-white
    margin 0

  .status-highlight__text
    color rgba(255, 255, 255, 0.85)
    font-size 1.05rem
    line-height 1.8

  .status-contact
    display flex
    flex-direction column
    gap 16px

    .contact-item
      display flex
      align-items center
      gap 14px
      color base-white
      font-size 1.05rem
      line-height 1.6

      .contact-label
        font-weight 600
        letter-spacing 0.02em

      .contact-value
        font-weight 500

@media (max-width: 1024px)
  .under-construction-info
    padding 64px 0

    .container
      grid-template-columns 1fr

@media (max-width: 768px)
  .hero-banner--under-construction
    .hero-text
      padding 0 5%

      .hero-title
        font-size 2.2rem

  .under-construction-info
    padding 56px 0

    .status-card
      padding 32px

    .status-highlight
      padding 36px

@media (max-width: 480px)
  .hero-banner--under-construction
    .hero-text
      .hero-title
        font-size 1.85rem

  .under-construction-info
    .status-card
      padding 28px

    .status-highlight
      padding 30px

